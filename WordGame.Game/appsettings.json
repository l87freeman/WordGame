{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "%BASEDIR%\\Logs\\WordGame.Game-{Hour}.log",
          "rollingInterval": "Hour",
          "outputTemplate": "[{Timestamp:o}][{MachineName}][{SourceContext:l}] [{Level}]: {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
  "AllowedHosts": "*",
  "GameConfiguration": {
    "StateServiceAddress": "",
    "StateServiceRestoreUri": "",
    "StateServiceGetUri": ""
  },
  "BotConfiguration": {
    "Address": "http://word-game-bot-service-service:8087/bot/resolve/"
  },
  "StateManagerConfiguration": {
    "Address": "http://word-game-state-service:8088/state/"
  },
  "DictionaryProxyConfiguration": {
    "BaseAddress": "http://word-game-dictionary-service:8086/dictionary/",
    "WordsAddress": "words/{0}/",
    "IsExistsAddress": "check/{0}/"
  } 
}
